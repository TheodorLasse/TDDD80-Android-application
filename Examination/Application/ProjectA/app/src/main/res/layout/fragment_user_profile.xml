<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/ListViewUserLikes"
        android:layout_width="411dp"
        android:layout_height="179dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserLikes" />

    <ListView
        android:id="@+id/ListViewUserComments"
        android:layout_width="411dp"
        android:layout_height="179dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserComments" />

    <TextView
        android:id="@+id/textViewUserProfileUsername"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonUserProfileFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/follow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewUserProfileUsername"
        app:layout_constraintTop_toTopOf="@+id/textViewUserProfileUsername" />

    <ListView
        android:id="@+id/ListViewUserPosts"
        android:layout_width="411dp"
        android:layout_height="179dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUserPosts" />

    <TextView
        android:id="@+id/textViewUserPosts"
        android:background="@color/lightGreen"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_width="415dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="@string/posts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUserProfileFollow" />

    <TextView
        android:id="@+id/textViewUserComments"
        android:background="@color/lightGreen"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_width="415dp"
        android:layout_height="30dp"
        android:text="@string/comments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListViewUserPosts" />

    <TextView
        android:id="@+id/textViewUserLikes"
        android:background="@color/lightGreen"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_width="415dp"
        android:layout_height="30dp"
        android:text="@string/liked_posts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListViewUserComments" />

</androidx.constraintlayout.widget.ConstraintLayout>